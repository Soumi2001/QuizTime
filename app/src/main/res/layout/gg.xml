<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/questionbackground"
    tools:context=".HomeScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#1BFFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ScoreboardHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:text="Select Your Option"
                    android:textAlignment="gravity"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="333dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/coption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cardCornerRadius="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="211dp"
                            app:srcCompat="@drawable/clogo" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/topic1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C Quiz"
                        android:textColor="#FBFBFB"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/coption"
                        app:layout_constraintStart_toStartOf="@+id/coption"
                        app:layout_constraintTop_toBottomOf="@+id/coption" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cplusop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cardCornerRadius="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="wrap_content"
                            android:layout_height="210dp"
                            app:srcCompat="@drawable/cplus" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/topic2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C++ Quiz"
                        android:textColor="#FBFBFB"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/cplusop"
                        app:layout_constraintStart_toStartOf="@+id/cplusop"
                        app:layout_constraintTop_toBottomOf="@+id/cplusop" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="352dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/javaop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cardCornerRadius="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck">

                        <ImageView
                            android:id="@+id/imageV1iew"
                            android:layout_width="match_parent"
                            android:layout_height="211dp"
                            app:srcCompat="@drawable/java" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/topic3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JAVA Quiz"
                        android:textColor="#FBFBFB"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/javaop"
                        app:layout_constraintStart_toStartOf="@+id/javaop"
                        app:layout_constraintTop_toBottomOf="@+id/javaop" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pythonop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cardCornerRadius="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck">

                        <ImageView
                            android:id="@+id/i8mageView"
                            android:layout_width="wrap_content"
                            android:layout_height="210dp"
                            app:srcCompat="@drawable/python" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/topic4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Python Quiz"
                        android:textColor="#FBFBFB"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/pythonop"
                        app:layout_constraintStart_toStartOf="@+id/pythonop"
                        app:layout_constraintTop_toBottomOf="@+id/pythonop" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

